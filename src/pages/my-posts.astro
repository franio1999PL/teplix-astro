---
import * as greatPost from './posts/great-post.md';

const posts = await Astro.glob('./posts/*.md');
---

<p class="text-center text-2xl p-4">{greatPost.frontmatter.title}</p>
<p class="text-center">Written by: {greatPost.frontmatter.author}</p>

<p class="text-center font-bold">Post Archive:</p>
<ul class="text-red-300 flex flex-col items-center justify-center m-16">
  {posts.map(post => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
</ul>